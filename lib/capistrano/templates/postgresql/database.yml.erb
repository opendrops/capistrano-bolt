<%= fetch(:stage) %>:
  adapter: postgresql
  timeout: 5000
  encoding: utf8
  reconnect: false
  database: <%= "#{fetch(:postgresql_database)}" %>
  pool: 5
  username: <%= "#{fetch(:postgresql_user)}" %>
  password: <%= "#{fetch(:postgresql_password)}" %>
  host: <%= "#{fetch(:postgresql_host)}" %>
  port: 5432
